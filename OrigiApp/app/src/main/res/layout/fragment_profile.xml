<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
 tools:context=".ProfileFragment"
android:background="@color/light_grey"
android:weightSum="3">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.6"
    android:weightSum="3"
    android:id="@+id/l1"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/rounded_corner"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:textStyle="bold"
        android:text="Dileka J.H.S"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:textColor="@color/black"
        android:text="Plot # 641, Road # 3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:textColor="@color/black"
        android:text="Block # H, Bashundhara R/A Tangalle"/>
</LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Meter Info"
    android:paddingVertical="10dp"
    android:textColor="@color/black"
    android:paddingHorizontal="20dp"
    android:textSize="25dp"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.6"
    android:layout_marginHorizontal="10dp"
    android:weightSum="6"
    android:id="@+id/l2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:background="@drawable/rounded_corner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Consumer No"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/consumerNo"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:text="assdd"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Meter No"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:id="@+id/meterNo"
            android:text="assdd"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Meter Phase"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Consumer Type"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:text="A - Residential"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Old Meter No"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:text="N/A"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Payment Type"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:text="Prepaid"
            android:textColor="@color/cardview_dark_background"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Personal Info"
    android:paddingHorizontal="20dp"
    android:textColor="@color/black"
    android:paddingVertical="10dp"
    android:textSize="25dp"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.8"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/l3">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email"
            android:layout_weight="0.38"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mail"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.09"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/phone"
            android:layout_weight="0.38"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:id="@+id/phone"
            android:layout_weight="0.09"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/others"
            android:layout_weight="0.38"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/others"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:layout_weight="0.09"/>
    </LinearLayout>

</LinearLayout>

</LinearLayout>