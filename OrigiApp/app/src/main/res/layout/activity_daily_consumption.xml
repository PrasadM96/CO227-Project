<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    >


    <TextView
        android:id="@+id/usage1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:text="Set Your Limit"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text=""
        android:textStyle="bold"
        android:layout_below="@+id/usage1"
        android:id="@+id/text1"
        android:textAlignment="center" android:background="#ffffff"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="TYPE"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/text1"
        android:id="@+id/text2"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="VALUE"
        android:layout_below="@+id/text1"
        android:id="@+id/text3"
        android:layout_toRightOf="@+id/text2"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="UNIT"
        android:layout_below="@+id/text1"
        android:id="@+id/text4"
        android:layout_toRightOf="@+id/text3"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="Warning"
        android:layout_below="@+id/text2"
        android:id="@+id/text5"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:background="#E4E4E4"
        android:paddingTop="5dp"/>

    <EditText
        android:id="@+id/text6"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:layout_below="@+id/text3"
        android:layout_toRightOf="@+id/text5"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:text=""
        android:textAlignment="center" />


    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="Ruppees"
        android:textColor="#000000"
        android:layout_below="@+id/text4"
        android:id="@+id/text8"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/text6"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="Limit"
        android:textColor="#000000"
        android:background="#E4E4E4"
        android:layout_below="@+id/text5"
        android:id="@+id/text9"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="5dp"/>


    <EditText
        android:id="@+id/text10"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_below="@+id/text6"
        android:layout_toRightOf="@+id/text9"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text=""
        android:textAlignment="center" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="Ruppees"
        android:layout_below="@+id/text8"
        android:id="@+id/text11"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/text10"
        android:paddingTop="5dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/text9"
        android:layout_below="@+id/text10"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="SUBMIt"
        android:background="#77987F"
        />

</RelativeLayout>

