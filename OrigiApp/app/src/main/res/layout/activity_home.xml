<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/gradient"
    android:padding="16dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_above="@+id/etSerial"
    android:paddingBottom="20dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/relative">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ceb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:text="CEB"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>
</RelativeLayout>

    <EditText
        android:id="@+id/etSerial"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_name1"
        android:ems="10"
        android:hint="Serial"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/etAccNo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etAccNo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="AccNo"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/login"
        android:layout_alignLeft="@+id/etSerial"
        android:layout_alignStart="@+id/etSerial" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/login"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:background="@drawable/login"
        >
    </Button>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Here."
        android:textColor="#ffffff"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        android:id="@+id/linearLayout">

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="40dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible" />

</RelativeLayout>